<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:parentActivityName=".activities.settings_activity">

    <SwitchPreference
        android:defaultValue="false"
        android:key="dt_logo"
        android:title="@string/useDTlogoText" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="splash"
        android:title="@string/useSplash" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="wallets_auto_refresh"
        android:title="@string/autoRefreshTitleText"
        android:summary="@string/autoRefreshSummaryText" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="arrow_or_color"
        android:title="@string/colourTrendTitleText"
        android:summary="@string/colourTrendSummaryText" />
    <ListPreference
        android:defaultValue="USD"
        android:summary="%s"
        android:entries="@array/fiat_name"
        android:entryValues="@array/fiat_name"
        android:key="fiat_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/fiatCurrencyText" />

</PreferenceScreen>
